@{
}

@model MVCCoreDemo.Models.User
<h2>Login </h2>

<div style="border:solid thin wheat; padding:30px;width:50%">
    @using (Html.BeginForm("ValidateUser", "Employee", FormMethod.Post))
    {
        <div class="form-group">
            <div>
                <label>Employee UserName</label>
            </div>
            <div>
                <label>@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })</label>
            </div>
        </div>
        <div class="form-group">
            <div>
                <label>PassWord</label>
            </div>
            <div>
                <label>@Html.TextBoxFor(m => m.Password, new { @class = "form-control" })</label>
            </div>
        </div>



        <div>
            <div><button type="submit" class="btn btn-success">Login</button></div>
        </div>

        <div style="color:red">@ViewBag.Message</div>
    }

</div>